{
  "drotagx-test" : {
    "power" : [
      {
        "type" : "group",
        "devices" : [
          "camera",
          "arietta",
          "pixhawk",
          "ardupilot-simulator"
        ]
      }
    ]
  },
  "ardupilot-simulator" : {
    "power" : [
      {
        "type" : "host",
        "command" : {
          "on" : [
            {
              "execute" : "docker run -d --name ardupilot-simulator --rm --net=host airborne/ardupilot:latest"
            }
          ],
          "off" : [
            {
              "execute" : "docker stop -t0 ardupilot-simulator || exit 0"
            }
          ]
        }
      }
    ]
  },
  "camera" : {
    "power" : [
      {
        "type" : "serial",
        "baud" : "115200",
        "device" : "/dev/ttyRelayBoard",
        "command" : {
          "on" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "2"}
                },
                {
                  "send" : "CAMERA:ON\r",
                  "expect" : { "text" : "Success: CAMERA:ON\r", "timeout" : "1"}
                }
              ]
            }
          ],
          "off" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "1"}
                },
                {
                  "send" : "CAMERA:OFF\r",
                  "expect" : { "text" : "Success: CAMERA:OFF", "timeout" : "1"}
                }
              ]
            }
          ]
        }
      }
    ],
    "communications" : {
    }
  },
  "odroid-xu4" : {
    "power" : [
      {
        "type" : "optional"
      },
      {
        "type" : "serial",
        "baud" : "115200",
        "device" : "/dev/ttyRelayBoard",
        "command" : {
          "on" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "1"}
                },
                {
                  "send" : "BOARD:ON\r",
                  "expect" : { "text" : "Success: BOARD:ON", "timeout" : "1"}
                }
              ]
            }
          ],
          "off" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "1"}
                },
                {
                  "send" : "BOARD:OFF\r",
                  "expect" : { "text" : "Success: BOARD:OFF", "timeout" : 1}
                }
              ]
            }
          ]
        }
      },
      {
        "type" : "optional",
        "id" : "odroid-after-power"
      }
    ],
    "communications" : [
      {
        "device" : "/dev/ttyOdroid",
        "type" : "serial",
        "baud" : "115200"
      },
      {
        "type" : "ssh",
        "address" : "drotag",
        "user" : "root"
      }
    ]
  },
  "arietta" : {
    "power" : [
      {
        "type" : "optional",
        "id" : "arietta-before-power"
      },
      {
        "type" : "usb",
        "usb-address" : "1-2.3",
        "usb-port" : "4"
      },
      {
        "type" : "optional",
        "id" : "arietta-after-power"
      }
    ],
    "communications" : [
      {
        "device" : "/dev/ttyAriettaConsole",
        "type" : "serial",
        "baud" : "115200"
      },
      {
        "type" : "ssh",
        "address" : "drotag",
        "user" : "root"
      }
    ]
  },
  "pixhawk" : {
    "power" : [
      {
        "type" : "usb",
        "usb-address" : "1-2",
        "usb-port" : "4"
      }
    ],
    "communications" : [
    ]
  }
}
