{
  "drotagx-test" : {
    "power" : {
      "group" : {
        "type" : "group",
        "devices" : [
          "camera",
          "arietta",
          "pixhawk"
        ]
      }
    }
  },
  "camera" : {
    "power" : {
      "serial" : {
        "type" : "serial",
        "baud" : "115200",
        "device" : "/dev/ttyRelayBoard",
        "command" : {
          "on" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "2"}
                },
                {
                  "send" : "CAMERA:ON\r",
                  "expect" : { "text" : "Success: CAMERA:ON\r", "timeout" : "1"}
                }
              ]
            }
          ],
          "off" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "1"}
                },
                {
                  "send" : "CAMERA:OFF\r",
                  "expect" : { "text" : "Success: CAMERA:OFF", "timeout" : "1"}
                }
              ]
            }
          ]
        }
      }
    },
    "communications" : {
    }
  },
  "odroid-xu4" : {
    "power" : {
      "serial" : {
        "type" : "serial",
        "baud" : "115200",
        "device" : "/dev/ttyRelayBoard",
        "command" : {
          "on" : [
            {
              "io" : [ 
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "1"}
                },
                {
                  "send" : "BOARD:ON\r",
                  "expect" : { "text" : "Success: BOARD:ON", "timeout" : "1"}
                }
              ]
            }
          ],
          "off" : [
            {
              "io" : [
                {
                  "send" : "\r",
                  "expect" : { "text" : "Welcome. Commands available are", "timeout" : "1"}
                },
                {
                  "send" : "BOARD:OFF\r",
                  "expect" : { "text" : "Success: BOARD:OFF", "timeout" : 1}
                }
              ]
            }
          ]
        }
      }
    },
    "communications" : {
      "serial" : {
        "device" : "/dev/ttyOdroid",
        "type" : "serial",
        "baud" : "115200"
      },
      "ssh" : {
        "type" : "ssh",
        "address" : "drotag",
        "user" : "root"
      }
    }
  },
  "arietta" : {
    "power" : {
      "host" : {
        "type" : "host",
        "shell" : "True",
        "command" : {
          "on" : [
            {
              "execute" : "echo 1",
              "io" : [ {
                  "expect" : { "text" : "1" }
                }
              ]
            }
          ],
          "off" : [
            {
              "execute" : "echo 2",
              "io" : [ {
                  "expect" : { "text" : "2" }
                }
              ]
            }
          ]
        }
      },
      "usb" : {
        "type" : "usb",
        "usb-address" : "1-2.3",
        "usb-port" : "4"
      }
    },
    "communications" : {
      "serial" : {
        "device" : "/dev/ttyAriettaConsole",
        "type" : "serial",
        "baud" : "115200"
      },
      "ssh" : {
        "type" : "ssh",
        "address" : "drotag",
        "user" : "root"
      }
    }
  },
  "pixhawk" : {
